<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <img src="{{post.user.profile_pic}}" class="profile-pic" alt="User's profile picture">
      <a href="/post/{{post.id}}">{{post.user.username}}</a>
    </h2>
    <p>Created on {{post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.body}}
    </p>
  </div>
</div>
{{/each}}